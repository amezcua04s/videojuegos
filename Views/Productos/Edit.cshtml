@model VideojuegosApp.Models.Juego  

@{
    ViewData["Title"] = "Editar Juego";
    Layout = "_LayoutAdminLTE";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <h1>@ViewData["Title"]</h1>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Editar Juego</h3>
                </div>

                <form asp-action="Edit" enctype="multipart/form-data">
                    <div class="card-body">
                        @* Mostrar errores del servidor *@
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        @* Campo oculto con el ID del medicamento *@
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group">
                            <label asp-for="Nombre"></label>
                            <input asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Descripcion"></label>
                            <textarea asp-for="Descripcion" class="form-control"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Precio"></label>
                            <input asp-for="Precio" class="form-control" />
                            <span asp-validation-for="Precio" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Stock"></label>
                            <input asp-for="Stock" class="form-control" />
                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Imagen actual</label><br />
                            @if (!string.IsNullOrEmpty(Model.RutaImagen))
                            {
                                <img src="@Url.Content(Model.RutaImagen)" alt="Imagen actual" style="max-height:150px;" />
                            }
                            else
                            {
                                <p>No hay imagen</p>
                            }
                        </div>

                        <div class="form-group">
                            <label asp-for="RutaImagen">Cambiar imagen (JPG o PNG)</label>
                            <input asp-for="RutaImagen" type="file" class="form-control-file" accept=".jpg,.jpeg,.png" />
                            <span asp-validation-for="RutaImagen" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Guardar cambios</button>
                        <a asp-action="Index" class="btn btn-secondary">Volver</a>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>

