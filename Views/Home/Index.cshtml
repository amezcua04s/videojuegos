@model IEnumerable<VideojuegosApp.Models.Juego>
@{
    ViewData["Title"] = "Catálogo de Videojuegos";
    Layout = "_Layout"; // Usa tu layout público (si no tienes uno, usa _Layout sin AdminLTE)
}

<div class="container mt-4">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    <div class="row">
        @foreach (var juego in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(juego.RutaImagen))
                    {
                        <img src="@juego.RutaImagen" class="card-img-top" alt="@juego.Nombre" style="height: 200px; object-fit: cover;">
                    }
                    <div class="card-body">
                        <h5 class="card-title">@juego.Nombre</h5>
                        <p class="card-text text-success font-weight-bold">@(juego.Precio?.ToString("C") ?? "Precio no disponible")</p>
                        <p class="card-text">@(juego.Descripcion?.Length > 100 ? juego.Descripcion.Substring(0, 100) + "..." : juego.Descripcion)</p>
                    </div>
                    <div class="card-footer bg-white">
                        <a href="#" class="btn btn-primary btn-block">Ver detalles</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>